<custom-modal id="modal-city">
  <div class="custom-modal">
    <div class="custom-modal-body">
        <div class=" text-right  mb-3">
          <button class="btn btn-default" (click)="closeModal();">
            <i class="fa fa-times"></i>
          </button>
        </div>
      <div class="table-responsive fixed-tablenotab">
        <table class="table table-sm table-hover">
          <thead>
            <tr>
              <th rowspan="2" class="align-bottom table-small">
              </th>
              <th rowspan="2" >
                <span class="cursor-pointer" (click)="this.order = this.order=='ASC' ? 'DESC' : 'ASC'; this.propertyName = 'citycode'; this.loadCityData({}) ">
                  City Code
                  <i *ngIf="this.propertyName == 'citycode' && this.order=='ASC'" class="fa fa-angle-up"></i>
                  <i *ngIf="this.propertyName == 'citycode' && this.order=='DESC'" class="fa fa-angle-down"></i>
                </span>
                <input type="text" class="form-control search-table form-control-sm my-1" [(ngModel)]="f_citycode" (keyup.enter)="this.loadCityData({})" >
              </th>
              <th rowspan="2">
                <span class="cursor-pointer" (click)="this.order = this.order=='ASC' ? 'DESC' : 'ASC'; this.propertyName = 'cityname'; this.loadCityData({}) ">
                  City Name
                  <i *ngIf="this.propertyName == 'cityname' && this.order=='ASC'" class="fa fa-angle-up"></i>
                  <i *ngIf="this.propertyName == 'cityname' && this.order=='DESC'" class="fa fa-angle-down"></i>
                </span>
                <input type="text" class="form-control search-table form-control-sm my-1" [(ngModel)]="f_cityname" (keyup.enter)="this.loadCityData({})">
              </th>
            </tr>
          </thead>
          <tbody>
            <tr *ngFor="let data of data_city | paginate: { id: 'id_city', itemsPerPage: this.itemsPerPage_city, currentPage: this.currentPage_city, totalItems: this.total_city };">
              <td class="align-bottom table-small">
                <button type="button" class="btn btn-link cursor-pointer" (click)="select(data)">
                  <i class="fa fa-check text-success" aria-hidden="true"></i>
                </button>
              </td>
              <td class="align-middle">{{data.citycode}}</td>
              <td class="align-middle">{{data.cityname}}</td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="navbar navbar-light bg-light px-0 px-2" id="footer">
        <div class="show-entries">
          <span class="show">Show &nbsp;</span>
          <select name="itemsPerPage_city" [(ngModel)]="this.itemsPerPage_city" (change)="this.itemsPerPage_city = $event.target.value; this.loadCityData({})">
            <option *ngFor="let data of this.appServices.session.paginate" [value]="data.short">{{data.short}}</option>
          </select>
          <span>&nbsp;entries</span>
        </div>
        <pagination-controls id="id_city" (pageChange)="this.currentPage_city = $event; this.loadCityData({})"></pagination-controls>
      </div>
    </div>
  </div>
  <div class="custom-modal-background"></div>
</custom-modal>
