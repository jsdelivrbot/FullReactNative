<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-11 col-sm-12 col-md-10 col-lg-8 box-shadow mx-auto">
      <div class="row bg-white">
        <div class="col-sm-7 col-md-8 col-lg-8 p-0">
          <img class="img-fluid" src="assets/img/login.jpg" />
        </div>
        <form class="col-sm-5 col-md-4 col-lg-4 my-auto pt-1 pb-1" #frmadminlogin="ngForm" (ngSubmit)="signin(frmadminlogin.value)">
          <h1>Sign in</h1>
          <input type="text" class="form-control" placeholder="Username" required autofocus name="username" ngModel >
          <input type="password" class="form-control" placeholder="Password" required name="password" ngModel >
          <br/>
          <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
            <input type="checkbox" class="custom-control-input">
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description"><small>Keep me signed in</small></span>
          </label>
          <!-- routerLink="/admin/home" -->
          <button [disabled]="!frmadminlogin.form.valid" class="btn btn-lg btn-primary btn-block mt-3 mb-3">Sign in</button>
          <a href="#" class="text-muted small">Forgot my password</a>
        </form>
      </div>
    </div>
  </div>
</div>
