<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-11 col-sm-12 col-md-10 col-lg-8 box-shadow mx-auto">
      <div class="row bg-white">
        <div class="col-sm-7 col-md-8 col-lg-8 p-0">
          <img class="img-fluid" src="assets/img/login.jpg" />
        </div>
        <form class="col-sm-5 col-md-4 col-lg-4 my-auto pt-1 pb-1" #frmsignup="ngForm" autocomplete="off" (ngSubmit)="signup(frmsignup.value)">
          <h1>Sign up</h1>
          <div class="input-group">
            <span class="input-group-addon"><span class="text-danger">&nbsp;*</span>Full Name</span>
            <input type="text" class="form-control"  name="fullname" ngModel required>
          </div>
          <div class="input-group">
            <span class="input-group-addon"><span class="text-danger">&nbsp;*</span> Email</span>
            <input type="text" class="form-control" autofocus name="email" ngModel pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required>
          </div>
          <div class="input-group">
            <span class="input-group-addon"><span class="text-danger">&nbsp;*</span>Tel</span>
            <input type="text" class="form-control"  name="tel" ngModel required>
          </div>
          <div class="input-group">
            <span class="input-group-addon"><span class="text-danger">&nbsp;*</span>Username</span>
            <input type="text" class="form-control" name="username" ngModel required>
          </div>
          <div class="input-group">
            <span class="input-group-addon"><span class="text-danger">&nbsp;*</span>Password</span>
            <input type="password" class="form-control" name="password" ngModel required>
          </div>
          <div class="input-group">
            <span class="input-group-addon"><span class="text-danger">&nbsp;*</span>Comfirm Password</span>
            <input type="password" class="form-control" name="comfirmpassword" ngModel required>
          </div>
          <label class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" name="rule" ngModel required>
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description small lead">By selecting you agree to our Terms of Service and Privacy Policy </span>
          </label>
          <br/>
          <!-- routerLink="/admin/home" -->
          <button [disabled]="!frmsignup.form.valid" class="btn btn-sm btn-primary btn-block">Sign up</button>
          <a routerLink="/admin/login" class="small">Already a member?</a>
        </form>
      </div>
    </div>
  </div>
</div>
